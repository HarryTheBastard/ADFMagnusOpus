<Window x:Class="ADFMagnumOpus.Shell.WorkbenchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:vm="clr-namespace:ADFMagnumOpus.ViewModels"
        xmlns:controls="clr-namespace:ADFMagnumOpus.Controls"
        xmlns:local="clr-namespace:ADFMagnumOpus.Shell"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:WorkbenchWindowViewModel, IsDesignTimeCreatable=True}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Background="{StaticResource WB.Brush.WindowGray}"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        x:Name="AppWindow"
        Title="{Binding AppTitle}"
        Width="1000" Height="650">

    <Window.Resources>
        <Style TargetType="{x:Type local:WorkbenchWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Grid Background="{StaticResource WB.Brush.WindowGray}">
                            <!-- Window Border -->
                            <Border BorderThickness="2" />

                            <!-- Main Window content -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <!-- Title Bar -->
                                    <RowDefinition Height="{Binding TitleHeightGridLength, FallbackValue=42}" />
                                    <!-- Window Content -->
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Title Bar -->
                                <Grid Grid.Row="0"
                                      Background="{StaticResource WB.Brush.BlueTitle}"
                                      Panel.ZIndex="1">

                                    <Grid.ColumnDefinitions>
                                        <!-- Close -->
                                        <ColumnDefinition Width="Auto" />

                                        <!-- Title -->
                                        <ColumnDefinition Width="*" />

                                        <!-- Minimize -->
                                        <ColumnDefinition Width="Auto" />

                                        <!-- Maximize -->
                                        <ColumnDefinition Width="Auto" />
                                        
                                        <!-- Toggle Front Back -->
                                        <ColumnDefinition Width="Auto" />

                                    </Grid.ColumnDefinitions>

                                    <!-- Close button  -->
                                    <Button Grid.Column="0"
                                            Command="{Binding DataContext.CloseCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                            Style="{StaticResource TitlebarCloseButton}"
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                                        <TextBlock Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Width="12"/>
                                    </Button>

                                    <!-- 1) White top/left edge (underlay) -->
                                    <Border Grid.Column="1"
                                            BorderBrush="{StaticResource WB.Brush.White}"
                                            BorderThickness="2,2,0,0"
                                            Panel.ZIndex="1"/>

                                    <!-- 2) Black bottom edge (overlay so bottom-left becomes black) -->
                                    <Border Grid.Column="1"
                                            BorderBrush="{StaticResource WB.Brush.Black}"
                                            BorderThickness="0,0,2,2"
                                            Panel.ZIndex="2" />

                                    <Viewbox Grid.Column="1" Margin="0" Stretch="Uniform">
                                        <TextBlock Style="{StaticResource HeaderText}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title}" />
                                    </Viewbox>


                                    <!-- Gadget buttons  -->
                                    <Button Grid.Column="2"
                                            Command="{Binding DataContext.MinimizeCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                            Style="{StaticResource TitlebarMinimizeButton}"
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                                        <TextBlock Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Width="14" />
                                    </Button>

                                    <Button Grid.Column="3"
                                            Command="{Binding DataContext.MaximizeCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                            Style="{StaticResource TitlebarMaximizeButton}"
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                                        <TextBlock Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Width="14" />
                                    </Button>

                                    <Button Grid.Column="4"
                                            Command="{Binding DataContext.ToggleFrontBehindCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                            Style="{StaticResource TitlebarToggleFrontBehindButton}"
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                                        <TextBlock Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Width="14" />
                                    </Button>
                                </Grid>

                                <!-- Client area bevel (left/right/bottom) -->
                                <Grid Grid.Row="1" Background="{StaticResource WB.Brush.WindowGray}">
                                    <!-- Left: White outside, Black inside -->
                                    <Rectangle Fill="{StaticResource WB.Brush.White}"
                                               Width="2"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Stretch"
                                               Panel.ZIndex="2" />
                                    <Rectangle Fill="{StaticResource WB.Brush.BlueTitle}"
                                               Width="4"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Stretch"
                                               Margin="2,0,0,2"
                                               Panel.ZIndex="3" />
                                    <Rectangle Fill="{StaticResource WB.Brush.Black}"
                                               Width="6"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Stretch"
                                               Margin="2,0,0,2"
                                               Panel.ZIndex="1"/>

                                    <!-- Right: Black outside, White inside -->
                                    <Rectangle Fill="{StaticResource WB.Brush.Black}"
                                               Width="2"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Stretch"
                                               Panel.ZIndex="1" />
                                    <Rectangle Fill="{StaticResource WB.Brush.BlueTitle}"
                                               Width="4"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Stretch"
                                               Margin="0,0,2,2"
                                               Panel.ZIndex="3" />
                                    <Rectangle Fill="{StaticResource WB.Brush.White}"
                                               Width="6"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Stretch"
                                               Margin="0,0,2,2"
                                               Panel.ZIndex="2" />

                                    <!-- Bottom: Black outside, White inside -->
                                    <Rectangle Fill="{StaticResource WB.Brush.Black}"
                                               Height="2"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Bottom"/>
                                    <Rectangle Fill="{StaticResource WB.Brush.White}"
                                               Height="2"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Bottom"
                                               Margin="2,0,2,2"/>

                                    <!-- Client area -->
                                    <ContentPresenter Margin="2,0,2,2"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- WindowChrome: the correct attached property usage -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome ResizeBorderThickness="{Binding ResizeBorderThickness}"
                            CaptionHeight="{Binding TitleHeight}"
                            CornerRadius="0"
                            GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <!--<Grid>
        --><!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="361*"/>
        </Grid.ColumnDefinitions>--><!--
        <Label Grid.ColumnSpan="2">asd</Label>
    </Grid>-->


    <Window.DataContext>
        <vm:WorkbenchWindowViewModel />
    </Window.DataContext>

    <Grid>
        <!-- Main Workbench area -->
        <controls:WorkbenchCanvas />
    </Grid>

</Window>
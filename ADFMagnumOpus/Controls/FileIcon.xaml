<UserControl x:Class="ADFMagnumOpus.Controls.FileIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADFMagnumOpus.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="96" d:DesignWidth="96">
    <Border CornerRadius="10" Background="Transparent">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="64" Height="64" Source="{Binding IconSource}" RenderOptions.BitmapScalingMode="Fant"/>
            <TextBlock Text="{Binding VolumeName}"
                       Margin="0,6,0,0"
                       TextAlignment="Center"
                       Width="96"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource WB.Brush.Black}" FontSize="16"/>
        </StackPanel>
    </Border>
</UserControl>
